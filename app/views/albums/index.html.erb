<div class="title-area">
    <div class="container">
        <div class="row">
            <div class="span10">
                <h1>Gallery</h1>
            </div>
            <%= render "shared/socialicon" %>
        </div>
    </div>
</div>

<div class="breadcrumbs-container">
    <div class="container">
        <div class="row">
            <div class="span12">
                <ul class="breadcrumb">
                    <li><%= link_to "Home Page", root_path %> <span class="divider"></span></li>
                    <li class="active"><a href="">Gallery</a></li>
                </ul>
            </div>
        </div>
    </div>
</div><!-- /breadcrumbs -->

<div class="main-content">
    <div class="container">
        <div class="row">
            <div class="span9">
                <% @albums.each_with_index do |item, index| %>
                  <div class="lined">
                      <h2><%= link_to item.title, item %></h2>
                      <h5><%= item.created_at.strftime('%I. %B %Y') %></h5>
                      <span class="bolded-line"></span>
                  </div>
                  <div class="row with-margin">
                      <div class="span9"><%= item.description %></div>
                  </div>               
                  <section class="gallery clearfix">
                      <% item.pictures.limit(12).each do |pic| %>
                        <div class="picture">
                            <%= link_to(pic.file_url, rel: "lightbox[#{item.id}]") do %>
                              <img width="91" height="91" alt="" src="<%= pic.file_url(:thumb115) %>">
                              <span class="img-overlay">
                                  <span class="icon icons-zoom"></span>
                              </span>
                            <% end %>
                        </div>
                      <% end %>
                  </section>
                  <% if (index + 1) < @albums.count %>
                    <div class="row">
                        <div class="span9">
                            <div class="divide-line">
                                <span class="icon icons-scissors"></span>
                            </div>
                        </div>
                    </div><!-- /divider -->
                  <% end %>
                <% end %>
            </div>
            <div class="span3">
                <%= render partial: "menu", locals: { albums: @albums } %>
            </div>
        </div><!-- /gallery left -->
    </div><!-- /container -->
</div>