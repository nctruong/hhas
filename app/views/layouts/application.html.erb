    <body>
        <header>
            <div class="navbar navbar-inverse navbar-fixed-top">
                <div class="navbar-inner">
                    <div class="container">
                        <!--  =========================================  -->
                        <!--  = Used for showing navigation on mobile =  -->
                        <!--  =========================================  -->
                        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </a>

                        <!--  ==============================  -->
                        <!--  = Place for logo and tagline =  -->
                        <!--  ==============================  -->
                        <%= link_to(root_path, class: 'brand') do %>
                            <img src="/images/scissors.png" alt="HairPress Logo" width="48" height="53" class="logo" />
                            <h1>
                                <span class="theme-clr">Hair House</span> as
                            </h1>
                            <span class="tagline">Your Company Slogan</span>
                        <% end %>

                        <!--  =============================================  -->
                        <!--  = Main top navigation with drop-drown menus =  -->
                        <!--  =============================================  -->
                        <div class="nav-collapse collapse">
                            <ul class="nav">
                                <!-- <li <%= params[:controller] == 'index' ? 'class=active' : '' %>><%= link_to "Home", root_path %></li> -->
                                <li><%= link_to "Hove Side", root_path %></li>
                                <li><%= link_to "Hår & Styling", services_path %></li>
                                <li><%= link_to "Priser", article_path(4) %></li>
                                <li><%= link_to "Meet the team", employees_path %></li>
                                <li><%= link_to "Gallery", albums_path %></li>
                                <li><%= link_to "Kampanje", articles_path %></li>
                                <li><%= link_to "Kontakt", new_contact_path %></li>
                            </ul>
                            <%= link_to "Online booking", new_reservation_path, class: "btn btn-theme btn-large pull-right" %>
                        </div><!-- /.nav-collapse-->
                    </div>
                </div>
            </div>
        </header>

        <%= yield %>

        <div class="foot">
            <div class="container">

                <div class="row">
                    <div class="span3">
                        <div class="lined">
                            <h2>NAVIGATION</h2>
                            <h5>If you don't find it above</h5>
                            <span class="bolded-line"></span>
                        </div>
                        <nav>
                            <ul class="nav nav-pills nav-stacked">
                                <li><%= link_to "Home", root_path %></li>
                                <li><%= link_to "Hår & Styling", services_path %></li>
                                <li><%= link_to "Meet the team", employees_path %></li>
                                <li><%= link_to "Gallery", albums_path %></li>
                                <li><%= link_to "Blog", articles_path %></li>
                                <li><%= link_to "Contact us", new_contact_path %></li>
                                <li><%= link_to "Make an appointment", new_reservation_path %></li>
                            </ul>
                        </nav>
                    </div><!-- /navigavation -->

                    <div class="span3">
                        <div class="lined">
                            <h2>FACEBOOK</h2>
                            <h5>Find us on Facebook</h5>
                            <span class="bolded-line"></span>
                        </div>
                        <div id="fb-root"></div>
                        <script>(function (d, s, id) {
                              var js, fjs = d.getElementsByTagName(s)[0];
                              if (d.getElementById(id))
                              return;
                              js = d.createElement(s);
                            js.id = id;
                              js.src = "//connect.facebook.net/en_US/all.js#xfbml=1&appId=317322608312190";
                              fjs.parentNode.insertBefore(js, fjs);
                          }(document, 'script', 'facebook-jssdk'));</script>
                        <div class="fb-like-box" data-href="<%= getSocialIcons.where(clss: 'facebook').first.link %>" data-width="220" data-show-faces="true" data-colorscheme="dark" data-stream="false" data-border-color="#aaaaaa" data-header="false"></div>
                    </div><!-- /facebook -->

                    <div class="span3">
                        <div class="lined">
                            <!-- <nav class="arrows pull-right">
                                <a href="#" class="left icon icons-arrow-left-white"></a>
                                <a href="#" class="right icon icons-arrow-right-white"></a>
                            </nav> -->
                            <h2>TWITTER</h2>
                            <h5>Latest tweets</h5>
                            <span class="bolded-line"></span>
                        </div>
                        <a class="twitter-timeline" data-dnt="true" href="<%= getSocialIcons.where(clss: 'twitter').first.link %>"  data-widget-id="329899522903908352">Tweets by @primozcigler</a><script>!function (d, s, id) {
                            var js, fjs = d.getElementsByTagName(s)[0], p = /^http:/.test(d.location) ? 'http' : 'https';
                            if (!d.getElementById(id)) {
                              js = d.createElement(s);
                              js.id = id;
                              js.src = p + "://platform.twitter.com/widgets.js";
                              fjs.parentNode.insertBefore(js, fjs);
                            }
                          }(document, "script", "twitter-wjs");</script>
                    </div><!-- /navigavation -->

                    <div class="span3">
                        <div class="lined">
                            <h2>CONTACT US</h2>
                            <h5>Where the hell we are</h5>
                            <span class="bolded-line"></span>
                        </div>
                        <p>
                            <strong><%= getConfig 'title' %></strong> <br />
                            <%= getConfig 'address1' %> <br />
                            <%= getConfig 'address2' %> <br />
                            <%= getConfig 'address3' %> <br />
                            <a href="#" class="read-more">VIEW MAP -</a>
                        </p>
                        <div class="bolded-line"></div>
                        <p>
                            Phone: <strong><%= getConfig 'phone' %></strong> <br />
                            Fax: <strong><%= getConfig 'fax' %></strong> <br />
                            Mail: <strong><%= getConfig 'email' %></strong> <br />
                            Web: <strong><%= getConfig 'web' %></strong>
                        </p>
                    </div><!-- /navigavation -->

                </div><!-- /row -->
            </div><!-- /container -->
        </div><!-- /foot -->

        <footer>
            <a href="#" id="to-the-top">
                <span class="icon icons-to-top-arrow"></span>
            </a>
            <div class="container">
                <div class="row">
                    <div class="span6">
                        <%= getConfig 'copyright' %>
                    </div>
                    <div class="span6">
                        <div class="pull-right">Develop by <a href="http://www.zitsocnet.me">ZitSocNet</a></div>
                    </div>
                </div>
            </div>
