<p id="notice"><%= notice %></p>

<h1>Listing Article Categories</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Article category</th>
      <th>Weight</th>
      <th>Visible</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @article_categories.each do |article_category| %>
      <tr>
        <td><%= article_category.title %></td>
        <td><%= article_category.description %></td>
        <td><%= article_category.article_category %></td>
        <td><%= article_category.weight %></td>
        <td><%= article_category.visible %></td>
        <td><%= link_to 'Show', article_category %></td>
        <td><%= link_to 'Edit', edit_article_category_path(article_category) %></td>
        <td><%= link_to 'Destroy', article_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

